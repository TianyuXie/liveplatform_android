<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- For settings -->
    <string name="settings_nickname">昵称</string>
    <string name="settings_pptv_user">PPTV帐号</string>
    <string name="settings_password">修改密码</string>
    <string name="settings_change_nickname">修改昵称</string>
    <string name="settings_hint_nickname">昵称</string>
    <string name="settings_prelive">预播提醒</string>
    <string name="settings_content">内容提醒</string>
    <string name="settings_about">关于Bobo</string>
    <string name="settings_logout">注&#160;&#160;&#160;销</string>
    <string name="settings_title">设置</string>
    <string name="test_settings_version">Version 1.0 最新版本</string>

    <color name="settings_table_bg">#FF0E0E0E</color>
    <color name="settings_text">#FF919191</color>
    <color name="settings_logout_bg">#FFD92B2B</color>
    <color name="settings_version">#FF272727</color>
    <color name="settings_user">#FF1A1A1A</color>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settings_tablelayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:shrinkColumns">0</item>
        <item name="android:stretchColumns">0</item>
    </style>

    <style name="settings_tablerow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/settings_table_bg</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="settings_tablerow_switcher">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/settings_table_bg</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="settings_togglebutton" parent="togglebutton_notext">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/settings_btn_switcher</item>
    </style>

    <style name="settings_right_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:src">@drawable/settings_arrow_right</item>
    </style>

</resources>