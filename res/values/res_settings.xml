    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="settings_tablelayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@color/border_bg</item>
        <item name="android:shrinkColumns">0</item>
        <item name="android:stretchColumns">0</item>
    </style>

    <style name="settings_tablerow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="settings_tablerow_switcher">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="settings_togglebutton" parent="togglebutton_notext">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/settings_btn_switcher</item>
    </style>

    <style name="settings_right_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:src">@drawable/settings_arrow_right</item>
    </style>

    <style name="Widget.RadioButton.Transparent.Setting.Quality" parent="@style/Widget.RadioButton.Transparent">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>