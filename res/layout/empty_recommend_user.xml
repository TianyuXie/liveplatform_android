<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_no_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_little_panda"
        android:layout_alignTop="@+id/image_little_panda"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="@string/no_follow_user"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_little_panda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/text_no_follow"
        android:contentDescription="@null"
        android:src="@drawable/little_panda" />

    <TextView
        android:id="@+id/text_recommend_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_no_follow"
        android:background="@drawable/border_top"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/recommend_user"
        android:textColor="#018FE1"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/user_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/text_recommend_user"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp" />

</RelativeLayout>