<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/home_fragment_body_bg" >

    <com.pplive.liveplatform.ui.widget.SearchBarView
        android:id="@+id/search_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/app_bg" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listview_channel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/search_top_bar"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        ptr:ptrHeaderBackground="@color/pull_to_refresh_header_bg" />

</RelativeLayout>