<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp" >

        <LinearLayout
            android:id="@+id/left_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_live_home"
                style="@style/Widget.Button.Transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/live_record_btn_live_home" />

            <Button
                android:id="@+id/btn_live_back"
                style="@style/Widget.Button.Transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/live_record_btn_live_back"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/center_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_container"
            android:layout_toRightOf="@+id/left_container"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_live_schedule"
                style="@style/Widget.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0.5"
                android:inputType="none"
                android:singleLine="true"
                android:textColor="@color/edit_normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_live_title"
                style="@style/Widget.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/edit_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_live_share"
                style="@style/Widget.Button.Transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/live_record_btn_live_share" />

            <Button
                android:id="@+id/btn_live_prelive"
                style="@style/Widget.Button.Transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/live_record_btn_live_prelive" />

            <Button
                android:id="@+id/btn_live_complete"
                style="@style/Widget.Button.Transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/live_record_btn_live_complete"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_live_add"
                style="@style/Widget.Button.Transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/live_record_btn_live_add"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <com.pplive.liveplatform.ui.widget.DateTimePicker
        android:id="@+id/datetime_picker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="gone" />

    <com.pplive.liveplatform.ui.widget.HorizontalListView
        android:id="@+id/live_listview"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:visibility="gone" />

</merge>