<?xml version="1.0" encoding="utf-8"?>
<com.pplive.liveplatform.ui.widget.intercept.InterceptableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/home_fragment_body_bg" >

    <com.pplive.liveplatform.ui.widget.TitleBar
        android:id="@+id/titlebar_home"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/layout_home_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar_home"
        android:background="@drawable/navbar_bg"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/text_home_catalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/nav_text_bg"
            android:textSize="14sp" />
    </LinearLayout>

    <com.pplive.liveplatform.ui.home.ProgramContainer
        android:id="@+id/layout_home_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/layout_home_nav"
        android:background="@color/home_fragment_body_bg" />

    <LinearLayout
        android:id="@+id/layout_home_nodata"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@id/layout_home_body"
        android:layout_marginTop="50dp"
        android:background="@color/home_fragment_body_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_home_retry"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/home_empty_btn_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/home_nodata_text"
            android:textColor="@color/true_gray"
            android:textSize="18sp" />
    </LinearLayout>

</com.pplive.liveplatform.ui.widget.intercept.InterceptableRelativeLayout>