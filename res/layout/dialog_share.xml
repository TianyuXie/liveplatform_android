<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_share_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:textColor="#FF7E7E7E"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="40dp" >

        <Button
            android:id="@+id/btn_share_dialog_wechat"
            style="@style/Widget.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wechat_btn"
            android:text="@string/share_wechat" >
        </Button>

        <Button
            android:id="@+id/btn_share_dialog_wechatSNS"
            style="@style/Widget.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wechat_sns_btn"
            android:text="@string/share_wechat_sns" >
        </Button>

        <Button
            android:id="@+id/btn_share_dialog_sina"
            style="@style/Widget.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_weibo_btn"
            android:text="@string/share_weibo" >
        </Button>

        <Button
            android:id="@+id/btn_share_dialog_qq"
            style="@style/Widget.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_qq_btn"
            android:text="@string/share_qq" >
        </Button>
    </LinearLayout>

</LinearLayout>