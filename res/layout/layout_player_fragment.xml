<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_player_relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.pplive.media.player.MeetVideoView
        android:id="@+id/live_player_videoview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true" >
    </android.pplive.media.player.MeetVideoView>

    <RelativeLayout
        android:id="@+id/layout_player_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/player_title_bar" >

        <Button
            android:id="@+id/btn_player_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/test_player_back" />

        <TextView
            android:id="@+id/textview_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/test_player_title"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_player_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/test_player_live"
        android:textColor="@color/red"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/layout_player_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/player_title_bar" >

        <Button
            android:id="@+id/btn_player_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/test_player_share" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_player_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_player_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@null"
            android:src="@color/red" />

        <TextView
            android:id="@+id/textview_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_player_name"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>