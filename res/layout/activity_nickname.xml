<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height" >

        <Button
            android:id="@+id/btn_nickname_back"
            android:layout_width="@dimen/top_bar_back_btn_size"
            android:layout_height="@dimen/top_bar_back_btn_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/top_bar_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings_change_nickname"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_text_size" />

        <Button
            android:id="@+id/btn_nickname_confirm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/titlebar_confirm_btn_bg"
            android:enabled="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/edit_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_input_bg"
            android:hint="@string/settings_hint_nickname"
            android:inputType="text"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/login_input_text_bg"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>