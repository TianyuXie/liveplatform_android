<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_userpage_item_front"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <com.pplive.liveplatform.ui.widget.image.AsyncImageView
            android:id="@+id/image_userpage_program_preview"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/blank" />

        <TextView
            android:id="@+id/text_userpage_program_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_userpage_program_preview"
            android:layout_toRightOf="@id/image_userpage_program_preview"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_userpage_program_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_userpage_program_preview"
            android:layout_toRightOf="@+id/image_userpage_program_preview"
            android:textColor="@color/userpage_program_title_bg"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_userpage_program_vv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_userpage_program_preview"
            android:layout_alignParentRight="true"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="@string/userpage_default_vv"
            android:textColor="@color/userpage_program_title_bg"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_userpage_delete_item"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:background="@color/red"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/btn_delete"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>