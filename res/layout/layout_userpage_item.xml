<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layout_userpage_item_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_userpage_item_front"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="@color/black"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_userpage_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:background="@color/userpage_bg"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/text_userpage_program_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/userpage_program_title_bg"
                    android:textSize="15sp" />

                <com.pplive.liveplatform.ui.widget.image.AsyncImageView
                    android:id="@+id/image_userpage_program_preview"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_below="@id/text_userpage_program_status"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/blank" />

                <TextView
                    android:id="@+id/text_userpage_program_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/image_userpage_program_preview"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/image_userpage_program_preview"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_userpage_program_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/text_userpage_program_status"
                    android:textColor="@color/userpage_program_title_bg"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_userpage_program_vv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_userpage_program_preview"
                    android:layout_toRightOf="@id/image_userpage_program_preview"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text="@string/userpage_default_vv"
                    android:textColor="@color/userpage_program_title_bg"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_userpage_time_circle"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/userpage_time_circle_full"
            android:contentDescription="@null" />
    </RelativeLayout>

</FrameLayout>