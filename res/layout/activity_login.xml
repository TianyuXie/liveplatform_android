<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height" >

        <Button
            android:id="@+id/btn_login_back"
            android:layout_width="@dimen/top_bar_back_btn_size"
            android:layout_height="@dimen/top_bar_back_btn_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/top_bar_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/login_title"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_text_size" />

        <Button
            android:id="@+id/btn_login_confirm"
            android:layout_width="@dimen/top_bar_back_btn_size"
            android:layout_height="@dimen/top_bar_back_btn_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/titlebar_confirm_btn_bg"
            android:enabled="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_bg"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/login_nav"
            android:textColor="@color/nav_text_bg"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/edit_login_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_input_bg"
            android:hint="@string/login_username"
            android:imeOptions="actionNext"
            android:inputType="textUri"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/login_input_text_bg"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edit_login_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/login_input_bg"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/login_input_text_bg"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_no_pptv"
        android:textColor="@color/login_no_pptv_bg"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:layout_width="127dp"
            android:layout_height="63dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/login_btn_weibo"
            android:onClick="weiboLogin" />

        <Button
            android:layout_width="127dp"
            android:layout_height="63dp"
            android:background="@drawable/login_btn_qq"
            android:onClick="qqlogin" />
    </LinearLayout>

</LinearLayout>