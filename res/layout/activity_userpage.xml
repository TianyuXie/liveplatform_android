<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:live="http://schemas.android.com/apk/res/com.pplive.liveplatform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userpage_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/black" >

        <Button
            android:id="@+id/btn_userpage_back"
            android:layout_width="@dimen/titlebar_back_btn_size"
            android:layout_height="@dimen/titlebar_back_btn_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/titlebar_back_btn_bg" />

        <TextView
            android:id="@+id/text_userpage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/userpage_default_title"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_text_size" />

        <Button
            android:id="@+id/btn_userpage_settings"
            android:layout_width="@dimen/titlebar_back_btn_size"
            android:layout_height="@dimen/titlebar_back_btn_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/titlebar_settings_btn_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@drawable/userpage_bg" >

        <com.pplive.liveplatform.ui.widget.image.CircularImageView
            android:id="@+id/image_userpage_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user_icon_default" />

        <TextView
            android:id="@+id/text_userpage_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_userpage_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/image_userpage_camera"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/image_userpage_icon"
            android:layout_alignRight="@id/image_userpage_icon"
            android:layout_marginBottom="4dp"
            android:background="@drawable/userpage_avatar_change"
            android:contentDescription="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_userpage_pull_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.pplive.liveplatform.ui.widget.refresh.RefreshSwipeListView
                android:id="@+id/list_userpage_program"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                live:swipeBackView="@+id/layout_userpage_item_back"
                live:swipeCloseAllItemsWhenMoveList="true"
                live:swipeFrontView="@+id/layout_userpage_item_front"
                live:swipeMode="both" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_userpage_nodata"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_userpage_record"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/home_empty_btn_bg" />

            <TextView
                android:id="@+id/text_userpage_nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/userpage_user_nodata"
                android:textColor="@color/true_gray"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>